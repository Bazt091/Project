<%= form_with(model: product, local: true) do |form| %>
  <% if product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class='container'>

    <div class="field">
      <%= form.label :sku %><br>
      <%= form.text_field :sku %>
    </div>

    <div class="field">
      <%= form.label :nombre %><br>
      <%= form.text_field :name %>
    </div>

    <div class="field">
      <%= form.label :EAN %><br>
      <%= form.text_field :ean %>
    </div>

    <div class="field">
      <%= form.label :Proveedor %><br>
      <%= form.select :provider_id, Provider.all.pluck(:name, :id) %>
    </div>

    <div class="field">
      <%= form.label :Categoria %><br>
      <%= form.text_field :category %>
    </div>

    <div class="field">
      <%= form.label :SubCategoria %><br>
      <%= form.text_field :subcategory %>
    </div>

    <div class="field">
      <%= form.label :Activo? %>
      <%= form.check_box :active %>
    </div>

    <div class="field">
      <%= form.label :Imagen%><br>
      <%= form.file_field :image%>
    </div>

    <div class="actions">
      <%= form.submit %>
    </div>
  <% end %>

</div>
