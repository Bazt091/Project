<p id="notice"><%= notice %></p>

<h1>Details Purchase Orders</h1>

<table>
  <thead>
    <tr>
      <th>Info purchase order</th>
      <th>Product</th>
      <th>Product quantity</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @details_purchase_orders.each do |details_purchase_order| %>
      <tr>
        <td><%= details_purchase_order.info_purchase_order.id %></td>
        <td><%= details_purchase_order.product.name %></td>
        <td><%= details_purchase_order.product_quantity %></td>
        <td><%= link_to 'Show', details_purchase_order %></td>
        <td><%= link_to 'Edit', edit_details_purchase_order_path(details_purchase_order) %></td>
        <td><%= link_to 'Destroy', details_purchase_order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

