<h1>Info Purchase Orders</h1>

<table>
  <thead>
    <tr>
      <th>Numero de Orden</th>
      <th>Cliente</th>
      <th>User</th>
      <th>Ejecutivo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @info_purchase_orders.each do |info_purchase_order| %>
      <tr>
        <td><%= info_purchase_order.id %></td>
        <td><%= info_purchase_order.provider_name %></td>
        <td><%= info_purchase_order.user_name %></td>
        <td><%= link_to 'Show', info_purchase_order %></td>
        <td><%= link_to 'Edit', edit_info_purchase_order_path(info_purchase_order) %></td>
        <td><%= link_to 'Destroy', info_purchase_order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

